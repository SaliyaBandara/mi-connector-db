{
  "connectorName": "db",
  "operationName": "update",
  "title": "Update Query",
  "help": "<h1>DB Connector</h1> <b>Update Query is used to update records in a database table.</b>",
  "elements": [
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "configRef",
              "displayName": "Database Connection",
              "inputType": "connection",
              "allowedConnectionTypes": [
                "MySQL",
                "PostgreSQL",
                "Microsoft SQL Server"
              ],
              "defaultType": "MySQL",
              "defaultValue": "",
              "required": "true",
              "helpTip": "DB connection to be used",
              "onValueChange": {
                "function": "updateTargetCombo",
                "params": [
                  {
                    "rpc": "fetchDSSTables",
                    "target": "table"
                  }
                ]
              }
            }
          },
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "Basic",
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "readOnly": true,
                    "readonly": "readonly",
                    "name": "query",
                    "displayName": "Query",
                    "inputType": "expressionTextArea",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "Query to execute",
                    "parentField": "table",
                    "onValueChange": {
                      "function": "buildQuery"
                    }
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "preparedStmt",
                    "displayName": "Prepared Statement",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Query as a prepared statement",
                    "hidden": true
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "columnTypes",
                    "displayName": "Column Types",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Types of the columns in the query",
                    "hidden": true
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "columnNames",
                    "displayName": "Column Names",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Names of the columns in the query",
                    "hidden": true
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "format",
                    "displayName": "Output Format",
                    "inputType": "combo",
                    "comboValues": ["json", "xml", "csv", "text"],
                    "defaultValue": "json",
                    "required": "true",
                    "helpTip": "Output format of the query result (json, xml, csv, text)",
                    "hidden": true
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "queryType",
                    "displayName": "Query Type",
                    "inputType": "combo",
                    "comboValues": ["online", "offline"],
                    "defaultValue": "offline",
                    "required": false,
                    "helpTip": "Type of the query"
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "table",
                    "displayName": "Table Name",
                    "inputType": "comboOrExpression",
                    "comboValues": [],
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "Type of the query result",
                    "onValueChange": {
                      "function": "handleDynamicContent",
                      "params": [
                        {
                          "rpc": "getDynamicFields",
                          "value": "table",
                          "onDynamicFieldChange": {
                            "function": "buildQuery",
                            "params": [
                              {
                                "queryType": "insert",
                                "resultField": "query",
                                "preparedResultField": "preparedStmt",
                                "columnTypesField": "columnTypes",
                                "columnNamesField": "columnNames"
                              }
                            ]
                          }
                        }
                      ]
                    },
                    "parentField": "columns"
                  }
                },
                {
                  "type": "table",
                  "value": {
                    "hidden": false,
                    "name": "columns",
                    "displayName": "Table Columns",
                    "title": "Table Columns",
                    "description": "Table columns to be used in where clause",
                    "tableKey": "columnName",
                    "tableValue": "columnValue",
                    "elements": [
                      {
                        "type": "attribute",
                        "value": {
                          "name": "columnName",
                          "displayName": "Column Name",
                          "inputType": "string",
                          "required": false,
                          "helpTip": ""
                        }
                      },
                      {
                        "type": "attribute",
                        "value": {
                          "name": "columnValue",
                          "displayName": "Column Value",
                          "inputType": "stringOrExpression",
                          "required": false,
                          "helpTip": ""
                        }
                      },
                      {
                        "type": "attribute",
                        "value": {
                          "name": "propertyType",
                          "displayName": "Column Type",
                          "inputType": "stringOrExpression",
                          "defaultValue": "VARCHAR",
                          "required": false,
                          "helpTip": ""
                        }
                      }
                    ],
                    "inputType": "ParamManager",
                    "onValueChange": {
                      "function": "buildQuery",
                      "params": [
                        {
                          "queryType": "update",
                          "resultField": "query"
                        }
                      ]
                    },
                    "parentField": "table"
                  }
                }
              ]
            }
          },
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "Advanced",
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "queryTimeout",
                    "displayName": "Query Timeout",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Query timeout in seconds"
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "transactionIsolation",
                    "displayName": "Transaction Isolation Level (Executes in a separate transaction regardless of sequence transaction)",
                    "inputType": "combo",
                    "comboValues": [
                      "TRANSACTION_NONE",
                      "TRANSACTION_READ_COMMITTED",
                      "TRANSACTION_READ_UNCOMMITTED",
                      "TRANSACTION_REPEATABLE_READ",
                      "TRANSACTION_SERIALIZABLE"
                    ],
                    "defaultValue": "TRANSACTION_NONE",
                    "required": "false",
                    "helpTip": "Transaction isolation level"
                  }
                }
              ]
            }
          },
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "Operation Result",
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "includeResultTo",
                    "displayName": "Add Result To",
                    "inputType": "comboOrExpression",
                    "comboValues": ["Message Body", "Message Property"],
                    "defaultValue": "Message Body",
                    "required": "true",
                    "helpTip": "Specify where to place operation result. Setting to a property will not change current payload at message body."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "resultPropertyName",
                    "displayName": "Property Name",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "enableCondition": [
                      { "includeResultTo": "Message Property" }
                    ],
                    "helpTip": "Name of property to add operation result"
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
