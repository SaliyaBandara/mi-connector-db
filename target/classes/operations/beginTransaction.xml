<template xmlns="http://ws.apache.org/ns/synapse" name="beginTransaction">
    <parameter name="transactionType" />
    <parameter name="timeout" />
    <parameter name="isolationLevel" />
    <parameter name="resultPropertyName" description="Property to store result set"/>

    <sequence>
        <class name="org.wso2.carbon.esb.connector.operations.ExecuteQuery">
            <property name="operation" value="BEGIN_TRANSACTION"/>
        </class>
    </sequence>
</template>
